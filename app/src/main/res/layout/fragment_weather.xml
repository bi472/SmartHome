<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp">

    <TextView
        android:id="@+id/city_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="Город"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"/>

    <TextView
        android:id="@+id/details_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/city_field"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-40dp"
        android:text="облачно"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10" />

    <TextView
        android:id="@+id/current_temperature_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/weather_icon"
        android:layout_centerInParent="true"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="-105dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="20"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/details_field"

        android:layout_centerInParent="true"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="-110dp"
        android:textColor="@color/white"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/updated_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/feels_like"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-30dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="5 апреля, вторник"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/updated_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:40"
        android:layout_alignBottom="@id/updated_field"
        android:layout_marginBottom="-35dp"
        android:layout_centerInParent="true"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/feels_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/current_temperature_field"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-10dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="Ощущается как -3℃"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>