<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/current_temperature_field"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:theme="@style/CircularProgress"/>

    <TextView
        android:id="@+id/city_field"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/region_field"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-40dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/details_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/city_field"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-40dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/current_temperature_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/weather_icon"
        android:layout_centerInParent="true"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="-105dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="70sp" />

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/details_field"

        android:layout_centerInParent="true"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="-120dp"
        android:scaleType="fitXY"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/updated_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/feels_like"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-30dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/updated_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/updated_field"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-35dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/feels_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/current_temperature_field"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-10dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/info_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/updated_time"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-79dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="Климат в комнате:"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/temperature_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/info_room"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-20dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="Температура:"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/humidity_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/temperature_room"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-20dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="Влажность:"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/updated_time_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/humidity_room"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-40dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="Обновлено в"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/region_field"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:shadowColor="@color/quantum_black_100"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="30sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform" />
</RelativeLayout>